{
  "name": "boilerplate-wdio",
  "type": "module",
  "scripts": {
    "wdio": "wdio run ./wdio.conf.ts",
    "clean": "rimraf allure-results && rimraf allure-report && rimraf junit-results",
    "clean-report": "allure generate --clean ./allure-results",
    "open-report": "npm run clean-report && allure open",
    "report": "npm run clean-report && npm run open-report"
  },
  "devDependencies": {
    "@wdio/allure-reporter": "^9.20.0",
    "@wdio/appium-service": "^9.20.0",
    "@wdio/cli": "^9.20.0",
    "@wdio/junit-reporter": "^9.20.0",
    "@wdio/local-runner": "^9.20.0",
    "@wdio/mocha-framework": "^9.20.0",
    "@wdio/spec-reporter": "^9.20.0",
    "allure-commandline": "^2.34.1",
    "appium": "^3.1.1",
    "appium-uiautomator2-driver": "^6.2.0",
    "rimraf": "^6.1.0"
  }
}
